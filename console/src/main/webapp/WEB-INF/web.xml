<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>log4j web console appender</display-name>
  
  <filter>
  	<filter-name>requestFilter</filter-name>
  	<filter-class>com.jebhomenye.log4j.web.filter.RequestFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>requestFilter</filter-name>
  	<url-pattern>/stream/*</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>logger</servlet-name>
  	<servlet-class>com.jebhomenye.log4j.web.Logger</servlet-class>
  </servlet>
  <servlet-mapping>
   <servlet-name>logger</servlet-name>
   <url-pattern>/logger.do</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
   <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
